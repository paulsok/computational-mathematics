{$R *.dfm}

function LagrangeInPoint(xk: array of integer; yk: array of integer;x: double): double;
  var
    Mult: double;
    Sum: double;
    i,j : integer;
  begin
  Sum:=0;
     for i:=0 to 6 do begin
         Mult:=1;
           for j:=0 to 6 do begin
               if (i<>j) then begin Mult:=Mult*((x-xk[j])/(xk[i]-xk[j]));end;
           end;
           Sum:=Sum+yk[i]*Mult;
     end;
     LagrangeInPoint:=Sum;
end;

end.
