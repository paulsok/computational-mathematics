unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Grids, ExtCtrls;

type
  TForm1 = class(TForm)
    Matrix: TStringGrid;
    Stolbec: TStringGrid;
    Button2: TButton;
    Accuracy: TEdit;
    Label1: TLabel;
    ListBox1: TListBox;
    Panel1: TPanel;
    Label3: TLabel;
    Button1: TButton;
    Label4: TLabel;
    Label2: TLabel;
    Label5: TLabel;
    Edit1: TEdit;
    Button3: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;
 const max=20;
var i,j,n:integer;
  A: array [1..max,1..max+1] of real; //расширенная матрица
  X: array [1..max] of real; // корни системы
  W: array of Integer;
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
  ListBox1.Clear;            // значения по умолчанию
Matrix.Cells[0,0]:='3,4';
Matrix.Cells[1,0]:= '1,1';
Matrix.Cells[2,0]:='0,2';
Matrix.Cells[3,0]:='-1,2';
Matrix.Cells[0,1]:='-0,7';
Matrix.Cells[1,1]:='3,3';
Matrix.Cells[2,1]:='-0,3';
Matrix.Cells[3,1]:='2';
Matrix.Cells[0,2]:='0,4';
Matrix.Cells[1,2]:='0,3';
Matrix.Cells[2,2]:='2,6';
Matrix.Cells[3,2]:='0,2';
Matrix.Cells[0,3]:='-0,2';
Matrix.Cells[1,3]:='0,6';
Matrix.Cells[2,3]:='0,4';
Matrix.Cells[3,3]:='1,7';
Stolbec.Cells[0,0]:='2';
Stolbec.Cells[0,1]:='1,9';
Stolbec.Cells[0,2]:='-0,4';
Stolbec.Cells[0,3]:='-6,5';
end;

procedure TForm1.Button1Click(Sender: TObject);
begin
close;
end;

procedure TForm1.Button2Click(Sender: TObject);
var x0: array [1..max] of real;
    w: array [1..4,1..4]of integer;
    k: integer;
    p,am,bm,t,e,s,Q:real;
const n=4;
begin
w[1,1]:=1;w[1,2]:=1;
w[1,3]:=1;w[1,4]:=1;
w[2,1]:=1;w[2,2]:=1;
w[2,3]:=1;w[2,4]:=1;
w[3,1]:=1;w[3,2]:=1;
w[3,3]:=1;w[3,4]:=1;
w[4,1]:=1;w[4,2]:=1;
w[4,3]:=1;w[4,4]:=1;
 ListBox1.Clear;
 e:=StrToFloat((Accuracy.Text));
 Q:=StrToFloat(Edit1.Text);
  for i:=1 to n do
    for j:=1 to n do
    a[i,j]:=StrToFloat(Matrix.Cells[j-1,i-1]);
   for i:=1 to n do
    a[i,n+1]:=Strtofloat(Stolbec.Cells[0,i-1]);
 {Проверка достаточного условия сходимости: абсолютная сумма недиагональных
  коэффициентов элементов строки должна быть меньше модуля диагональных
  коэффициентов этой строки}
  for i:=1 to n do
    begin
     p:=0;
      for j:=1 to n-1 do //суммируем модули недиагональных элементов
        if j<>i then p:=p+abs(a[i, j]);
    if abs(a[i,i])<p then //проверка сходимости итерационного процесса
      begin
       messageDLG('Итерационный процесс расходится',mtWarning,[mbOk],0);
        Exit; //выход из приложения
      end;
    end;
   for i:=1 to n do
    begin                     //приводим систему уравнений к нормальному виду
      for j:=1 to n do
        if j=i then
          a[i,j]:=(W[i,j]-Q*a[i, j]);   //B=(E-QA) ||B|| < 1
    end;
   for i:=1 to n do
    begin         //вычисление m-нормы матрицы системы уравнений и столбца свободных членов
     s:=0;
      for j:=1 to n do
        s:=s+abs(a[i, j]);
      if i = 1 then
         begin
           am:=s;
           bm:=abs(a[1, n+1]);
         end
      else
        begin
          if s>am then
             am:=s;
          if abs(a[i,n+1])>bm then
             bm:=abs(a[i,n+1]);
        end;
    end;
      k:=(round(((ln(e)+ln(abs(1-am))-ln(bm))/ln(am))));//устанавливаем начальные приближения
      x0[i]:=a[i,n+1];
      t:=0;
//вычисляем следующее число приближений
   repeat
    for i:=1 to n do //вычисляем значения корней xi
     begin
       s:=0;
       for j:=1 to n do
          s:=s+a[i,j]*x0[j];   //Xn*(E-QA)    =>
       x[i]:=a[i,n+1]+s;       // =>   X[n+1]=Xn*(E-QA)+Qf
     end;
    t:=(t+1);
    for i:=1 to n do
      x0[i]:=x[i];
      until t>k;
   for i:=1 to n do
   // вывод значений х и числа необходимых итераций
     ListBox1.Items.Append('x'+inttostr(i)+'='+floattostrf(x[i],fffixed,2,2));
     ListBox1.Items.Append('k='+ inttostr(abs(k)));
end;

procedure TForm1.Button3Click(Sender: TObject);
var
 s,e,Q,w:real;
 z:string;
 const n=4;
begin
  for i:=1 to n do
    for j:=1 to n do
    a[i,j]:=StrToFloat(Matrix.Cells[j-1,i-1]);
   for i:=1 to n do
    a[i,n+1]:=Strtofloat(Stolbec.Cells[0,i-1]);
 {Проверка достаточного условия сходимости: абсолютная сумма недиагональных
  коэффициентов элементов строки должна быть меньше модуля диагональных
  коэффициентов этой строки}
  for i:=1 to n do
    begin
    S:=0;
      for j:=1 to n-1 do //суммируем модули недиагональных элементов
        if j<>i then S:=S+abs(a[i, j]);
        w:=abs(a[i,i]);
        z:=(z+'1-'+FloatToStr(w)+'*lambda < '+FloatToStr(S)+#13);
        label4.Caption:=z;
end;
end;

end.



